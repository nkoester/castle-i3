[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

; label-open = ÓÑå
label-open-foreground = ${colors.secondary}
label-close = ÓÅ• cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/pdflatex]
type = custom/script
exec = ps -ef |grep -v grep | grep pdflatex > /dev/null && echo 'PDFLATEX'
interval = 1
label = %{B#f00 F#fff}%output%
format-underline = #268bd2

[module/latexmk]
type = custom/script
; exec = ps -ef |grep -v grep | grep latexmk > /dev/null && echo 'LATEXMK'
exec = ps -ef |grep -v grep | grep /usr/bin/latexmk > /dev/null && echo 'LATEXMK'
interval = 1
label = %{B#700 F#fff}%output%
format-underline = #268bd2

[module/vm]
type = custom/script
exec = pgrep qemu > /dev/null && echo 'VM(s)'
interval = 5
label = %{F#ff0000}%output%
format-underline = #268bd2

[module/updates-arch-aur]
type = custom/script
exec = ~/.config/polybar/scripts/archupdates.sh
label = %{F#ff0000}üç∏%output%
interval = 600

