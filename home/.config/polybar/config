; font-2 = Siji:pixelsize=10;1
; font-2 = Wuncon siji:pixelsize=10;1
font-2 = "Noto Sans Symbols2:size=9;1"

modules-left = i3
modules-center =
; modules-right = pdflatex latexmk vm filesystem xkeyboard cpu memory wlan eth battery temperature volume backlight date powermenu
modules-right = pdflatex latexmk vm xkeyboard cpu system-cpu-frequency memory wlan eth battery temperature pulseaudio updates-arch-aur date

tray-position = right
tray-padding = 0
; tray-transparent = true
tray-background = ${colors.background}

wm-restack = i3
;override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize


